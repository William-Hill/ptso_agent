# Dockerfile for Wardrobe Agent A2A Service
FROM python:3.12-slim

WORKDIR /app

# Install Node.js for MCP tools
RUN apt-get update && apt-get install -y curl && \
    curl -fsSL https://deb.nodesource.com/setup_18.x | bash - && \
    apt-get install -y nodejs && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Copy requirements and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY wardrobe_agent_a2a.py .
COPY agent_instructions/ ./agent_instructions/
COPY utils/ ./utils/
COPY llm_config.py .

# Expose port for A2A service
EXPOSE 8002

# Set environment variables
ENV PORT=8002
ENV PYTHONUNBUFFERED=1

# Run the wardrobe agent A2A service
CMD ["python", "wardrobe_agent_a2a.py"]

