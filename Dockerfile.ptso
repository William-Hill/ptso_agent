# Dockerfile for PTSO Agent A2A Client
FROM python:3.12-slim

WORKDIR /app

# Install Node.js for MCP tools
RUN apt-get update && apt-get install -y curl && \
    curl -fsSL https://deb.nodesource.com/setup_18.x | bash - && \
    apt-get install -y nodejs && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Copy requirements and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY ptso_agent_a2a.py .
COPY agent_instructions/ ./agent_instructions/
COPY utils/ ./utils/
COPY llm_config.py .

# Expose port for the PTSO agent service
EXPOSE 8000

# Set environment variables
ENV PORT=8000
ENV PYTHONUNBUFFERED=1

# Run the PTSO agent A2A client
CMD ["python", "ptso_agent_a2a.py"]
